<div class="page-header">
  <h1>
    Positions
    <a href="/positions/new" class="btn btn-lg btn-success">New Position</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Role</th>
        <th>Name</th>
        <th>Actions</th>
      </tr>
      <%=current_user.email%>
            <% @positions.each do |position| %>
      <tr>
        <td><%= position.user_id %></td>
        <td><%= position.role_id %></td>

        <td><%= Role.find(position.role_id).title%></td>
        <% x=Task.where({:role_id=>Role.find(position.role_id)})%>
        <% x.each do |i| %>
        <td><%= Skill.find(i.skill_id).name%>  </td>

        <% end %>
        <td>
          <a href="/positions/<%= position.id %>" class="btn btn-primary">Show</a>
          <a href="/positions/<%= position.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_position/<%= position.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <tr>

      </tr>
      <% end %>




    </table>
  </div>
</div>
