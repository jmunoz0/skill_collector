<div class="page-header">
  <h1>
    My Roles




    <a href="/positions/new" class="btn btn-primary">New Role</a>
    <a href="/all_skills" class="btn  btn-primary">See all my skills</a>
    <a href="/role_interest" class="btn btn-primary">Skill Comparison</a>
  </h1>

</div>

<div class="row">
    <% current_user.positions.each do |position| %>
    <div class="col-md-6">
      <div class="panel panel-default">

        <div class="panel-heading">
          <h3 class="panel-title"><%=position.role.title.singularize%></h3>
        </div>
        <% x=position.role.tasks%>
        <% x.each do |i| %>
        <div class="panel-body">
          <%= i.skill.name%>
        </div>
        <% end %>
        <div class="panel-footer">  <a href="/delete_position/<%= position.id %>" class="btn btn-danger btn-block" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a></div>
      </div>
      </div>
        <% end %>
  </div>
