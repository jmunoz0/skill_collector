<div class="page-header">
  <h1>
    Skill Comparison

  </h1>

</div>
<div class="padding-top padding-bottom">
  <h4 class="text-center ">
    What job position are you interested in?
</h4>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/compare" method="get">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <div class="form-group">
        <label for="role_id" class="control-label">
          Role
        </label>


        <%= select_tag(:id, options_from_collection_for_select(Role.all, :id, :title, @position.role_id), :class => "form-control")%>      </div>


      <button class="btn btn-success">
        Compare skills
      </button>
      or
      <a href="/positions">Cancel</a>
    </form>
  </div>




</div>
